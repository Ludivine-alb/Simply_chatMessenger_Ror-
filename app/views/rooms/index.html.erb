<p style="color: green"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
          <div class="col-3">
            <%= render 'form', room: Room.new, class: "form-control" %>
            <hr>
            <% @rooms.each do |room| %>
              <%= link_to room do %>
                <div class="card mb-3">
                  <div class="card-body">
                    <%= room.name %>
                  </div>
                </div>
              <% end %>  
            <% end %>
        </div>
      <div class="col-9">
        <% if @room.present? %>
                <div class="chat-room">
                  <p><%= @room.name %></p>
                  <div class="chat-box">
                    <%= render 'messages/form', message: Message.new %>
                  </div>
                </div>
        <% end %>
      </div>
   </div>
  </div>
